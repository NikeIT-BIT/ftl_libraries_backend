<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>io.foodtechlab</groupId>
        <artifactId>backend-libraries</artifactId>
        <version>${revision}</version>
    </parent>

    <artifactId>i18n</artifactId>
    <packaging>pom</packaging>
    <version>${revision}</version>

    <name>i18n</name>
    <description>Provides localization of applications into different languages</description>
    <url>https://github.com/foodtechlab/ftl_libraries_backend/blob/master/i18n/README.md</url>

    <modules>
        <module>i18n-helper</module>
        <module>i18n-core</module>
        <module>i18n-translator</module>
    </modules>

    <dependencies>
        <dependency>
